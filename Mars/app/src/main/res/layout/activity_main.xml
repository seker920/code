<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="370dp"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="ВВЕДИТЕ ВЕЛИЧИНУ МАССЫ"
        android:textColor="#008ACA"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.609"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/massIn"
        android:layout_width="370dp"
        android:layout_height="80dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="20dp"
        android:background="#DAF5FB"
        android:ems="10"
        android:gravity="center"
        android:hint="Поле ввода массы (в кг)"
        android:inputType="textPersonName"

        android:padding="10dp"
        android:textColor="#008ACA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="370dp"
        android:layout_height="70dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:hint="Рассчитать массу топлива"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="148dp" />

    <EditText
        android:id="@+id/massOut"
        android:layout_width="370dp"
        android:layout_height="80dp"
        android:layout_marginTop="224dp"
        android:layout_marginEnd="16dp"
        android:background="#DAF5FB"
        android:ems="10"
        android:gravity="center"
        android:hint="Масса топлива (в кг)"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="#008ACA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>